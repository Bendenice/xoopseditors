 * ************************************************************************
-->
<Styles>

	<!-- Object Styles -->
	<Style name="Image Left" element="img">
		<Attribute name="class" value="left" />
		<Attribute name="align" value="left" />
	</Style>
	<Style name="Image Right" element="img">
		<Attribute name="class" value="right" />
		<Attribute name="align" value="right" />
	</Style>

	<!-- Inline Styles -->
	<Style name="HiLite: Primary" element="span">
		<Attribute name="class" value="hilitePrimary" />
	</Style>
	<Style name="HiLite: Secondary" element="span">
		<Attribute name="class" value="hiliteSecondary" />
	</Style>
	<Style name="HiLite: Tertiary" element="span">
		<Attribute name="class" value="hiliteTertiary" />
	</Style>

	<Style name="Inserted Text" element="ins" />
	<Style name="Deleted Text" element="del" />

	<Style name="Code" element="code" />
	<Style name="Preformatted" element="pre" />
	<Style name="Cite" element="cite" />

</Styles>
